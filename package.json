{
  "name": "ixmaps",
  "version": "4.0.0",
  "description": "IxMaps Interactive Mapping System",
  "bin": {
    "ixmaps": "./dist/server/cli.js"
  },
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "tsc -p tsconfig.client.json",
    "build:vite": "vite build",
    "build": "npm run build:server && npm run build:client && npm run build:vite",
    "watch": "concurrently \"tsc -p tsconfig.server.json -w\" \"vite build --watch\"",
    "start": "node dist/server/server.js",
    "dev": "ts-node src/server/server.ts",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "express": "^4.17.21",
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/leaflet": "^1.9.0",
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}