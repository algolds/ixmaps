{
  "name": "ixmaps",
  "version": "4.0.0",
  "description": "IxMaps Interactive Mapping System",
  "type": "module",
  "bin": {
    "ixmaps": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc -b tsconfig.server.json tsconfig.client.json",
    "watch": "tsc -b tsconfig.server.json tsconfig.client.json -w",
    "start": "npm run build && node dist/server.js",
    "dev": "concurrently \"npm run watch\" \"nodemon dist/server.js\"",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "express": "^4.17.21",
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/leaflet": "^1.9.0",
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}