{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public/dist/js",
    "rootDir": "./src/js",
    "moduleResolution": "node",
    "module": "ESNext", 
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": ["src/js/**/*"],
  "exclude": ["node_modules", "public/dist"]
}