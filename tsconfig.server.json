{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "preserveSymlinks": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist", "public"]
} 